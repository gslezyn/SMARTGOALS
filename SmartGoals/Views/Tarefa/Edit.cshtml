@model SmartGoals.Models.Tarefa

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ul class="breadcrumb">
    <li><a href="@Url.Action("Index")">Tarefas</a> <span class="divider">/</span></li>
    <li class="active">@ViewBag.Title</li>
</ul>
@using (Html.BeginForm("Edit", "Tarefa", FormMethod.Post, new { @class = "form-horizontal" }))
{
    
    <div class="bmds-content">
        <legend>Editar</legend>
        @Html.ValidationSummary(true)
        <div class="control-group">
            <label class="control-label" for="Nome">
                Nome</label>
            <div class="controls">
                @Html.EditorFor(model => model.Nome)
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="Descricao">
                Descrição</label>
            <div class="controls">
                @Html.TextAreaFor(model => model.Descricao)
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="Inicio">
                Início</label>
            <div class="controls">
                @Html.TextBoxFor(model => model.Inicio)
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="Fim">
                Fim</label>
            <div class="controls">
                @Html.TextBoxFor(model => model.Fim)
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="IdCliente">
                Usuario</label>
            <div class="controls">
                @Html.DropDownList("IdUsuario", String.Empty)
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="Fim">
                Grupo</label>
            <div class="controls">
                @Html.DropDownList("IdTarefaGrupo", String.Empty)
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="Fim">
                Horas</label>
            <div class="controls">
                @Html.TextBoxFor(model => model.Horas)
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="Fim">
                Prioridade</label>
            <div class="controls">
                @Html.TextBoxFor(model => model.Prioridade)
            </div>
        </div>
    </div>   
    <div class="form-actions">
        <input type="submit" value="Salvar" class="btn btn-primary" />
        @Html.ActionLink("Voltar", "Index", new { }, new { @class = "btn" })
    </div>

}