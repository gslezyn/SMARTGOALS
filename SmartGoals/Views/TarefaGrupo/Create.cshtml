@model SmartGoals.Models.TarefaGrupo
@{
    ViewBag.Title = "ViewPage1";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm("Create", "TarefaGrupo", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.ValidationSummary(true)
  
    <fieldset>
        <legend>TarefaGrupo</legend>
        <div class="control-group">
            <label class="control-label" for="idProjeto">
                @Html.LabelFor(model => model.Nome)</label>
            <div class="controls">
                @Html.EditorFor(model => model.Nome)
                @Html.ValidationMessageFor(model => model.Nome)
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="idProjeto">
                Projeto</label>
            <div class="controls">
                @Html.DropDownList("IdProjeto", String.Empty)
            </div>
        </div>
        <div class="form-actions">
            <input type="submit" value="Create" class="btn btn-primary" />
            @Html.ActionLink("Back to List", "Index", new { }, new { @class="btn"})
       </div>
    </fieldset>
}

